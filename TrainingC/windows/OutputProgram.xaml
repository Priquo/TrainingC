<Window x:Class="TrainingC.windows.OutputProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainingC.windows"
        mc:Ignorable="d"
        Title="Результат" Height="350" Width="500"
        MinHeight="200"
        MinWidth="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="textblockDescription" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Текст"/>
        <Button Grid.Row="1" Click="Button_Click" Width="50">OK</Button>
    </Grid>
</Window>
