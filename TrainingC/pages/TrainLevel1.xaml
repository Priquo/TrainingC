<Page x:Class="TrainingC.pages.TrainLevel1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingC.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainLevel1">
    <Page.Resources>
        <DataTemplate x:Key="itemsTemplate">
            <DockPanel >
                <Button Uid="{Binding ID}" Content="Начать" Click="Button_Click" DockPanel.Dock="Right"/>
                <TextBlock Text="{Binding Description}" TextWrapping="WrapWithOverflow"  Width="600"/>
            </DockPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListBox x:Name="listboxMain" ItemsSource="{Binding ListTitles}" HorizontalContentAlignment="Center"/>
    </Grid>
</Page>
