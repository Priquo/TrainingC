<Window x:Class="TrainingC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainingC"
        mc:Ignorable="d"
        Title="Тренажер языка Си" Height="450" Width="950" MinHeight="450" MinWidth="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="387*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" Height="30" VerticalAlignment="Top">
            <ToggleButton></ToggleButton>
            <Separator />
            <Button Name="buttonShowStudyMaterials" Click="buttonShowStudyMaterials_Click">Лекционный материал</Button>
            <Separator />
            <Button Name="buttonShowDocs" Click="buttonShowDocs_Click">Руководство</Button>
        </ToolBar>
        <Frame x:Name="frameMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
